<div style="display: flex;">
    <div style="margin-right: 150px;">
        {{#isEmptyArray thumbnail}}
        <img src="https://i.ibb.co/zsQdBNc/200x200.gif" alt="img - no img">
        {{else}}
        <img src={{thumbnail}} width="200px" alt="img - {{thumbnail}}">
        {{/isEmptyArray}}
    </div>
    <div style="display: flex; flex-direction: column; margin-left: 150px">
        <div>
            <h3>{{title}}</h3>
        </div>
        <div>
            <p>{{category}} - {{description}}</p>
        </div>
        <div>
            <p>Precio ${{price}}</p>
        </div>
        <div>
            <p class="m-0">In stock {{stock}}</p>
            <select id="stockSelect">
                <option value="">Cantidad</option>
                {{#each options}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>
<div class="m-5">
    <button class="btn btn-primary btn-lg">Add to cart</button>
</div>

<script>
    const stock = {{ stock }}

    let optionsData = { options: [] }
    for (let i = 1; i <= stock; i++) {
        optionsData.options.push(i);
    }

    const stockSelect = document.getElementById('stockSelect');

    optionsData.options.forEach(function (option) {
        let optionElement = document.createElement('option');
        optionElement.value = option;
        optionElement.textContent = option;
        stockSelect.appendChild(optionElement);
    });
</script>